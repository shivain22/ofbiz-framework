        xmlns="http://ofbiz.apache.org/Widget-Screen" xsi:schemaLocation="http://ofbiz.apache.org/Widget-Screen http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="main">
        <section>
            <actions>
                <set field="headerItem" value="main"/><!-- this highlights the selected menu-item with name "main" -->
            </actions>
            <widgets>
                <decorator-screen name="AtparOfbizAppCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <label text="AtarApplication"/>
                    </decorator-section>
                    <decorator-section name="body" >
                        <screenlet title="Add Atpar Techie">
                            <include-form name="AddAtparTechie" location="component://atparOfbizApp/widget/AtparOfbizAppForms.xml"/>
                        </screenlet>
                        <screenlet title="Add Atpar Techie Upload">
                            <include-form name="AddAtparTechieUpload" location="component://atparOfbizApp/widget/AtparOfbizAppForms.xml"/>
                        </screenlet>
                        <screenlet title="Atpar Edit Product">
                            <include-form name="EditProduct" location="component://atparOfbizApp/widget/AtparOfbizAppForms.xml"/>
                        </screenlet>
                    </decorator-section>
                </decorator-screen>

            </widgets>
        </section>
    </screen>
