<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="https://ofbiz.apache.org/dtds/services.xsd">
    <description>Ecommerce Services</description>
    <vendor></vendor>
    <version>1.0</version>

    <service name="noSyntaxError" engine="interface">
        <description>
            Dummy service to prevent empty files and syntax error - Remove when the 1st real service will be added here
        </description>
    </service>

    <service name="createShoppingCart" default-entity-name="shoppingCart" engine="entity-auto" invoke="create" auth="true">
        <description>Create an Atpar Techie record</description>
        <auto-attributes include="pk" mode="OUT" optional="false"/>
        <auto-attributes include="nonpk" mode="IN" optional="false"/>
    </service>
    <service name="createcustomer" engine="java"
             location="org.apache.ofbiz.ecommerce.customer.customerEvents" invoke="registerCustomer" auth="false" action="POST" export="true">
        <description>Register new Customer to Ecommerce</description>
        <auto-attributes include="pk" mode="OUT" optional="false"/>
        <auto-attributes include="nonpk" mode="IN" optional="false"/>

        <!-- Input Attributes -->
        <attribute mode="IN" name="emailProductStoreId" type="String" optional="false"/>
        <attribute mode="IN" name="USER_TITLE" type="String" optional="true"/>
        <attribute mode="IN" name="USER_FIRST_NAME" type="String" optional="false"/>
        <attribute mode="IN" name="USER_LAST_NAME" type="String" optional="false"/>
        <attribute mode="IN" name="USER_MIDDLE_NAME" type="String" optional="true"/>
        <attribute mode="IN" name="USER_SUFFIX" type="String" optional="true"/>
        <attribute mode="IN" name="CUSTOMER_EMAIL" type="String" optional="false"/>
        <attribute mode="IN" name="CUSTOMER_EMAIL_ALLOW_SOL" type="String" optional="true"/>
        <attribute mode="IN" name="CUSTOMER_ADDRESS1" type="String" optional="false"/>
        <attribute mode="IN" name="CUSTOMER_ADDRESS2" type="String" optional="true"/>
        <attribute mode="IN" name="CUSTOMER_CITY" type="String" optional="false"/>
        <attribute mode="IN" name="CUSTOMER_POSTAL_CODE" type="String" optional="false"/>
        <attribute mode="IN" name="CUSTOMER_COUNTRY" type="String" optional="false"/>
        <attribute mode="IN" name="CUSTOMER_STATE" type="String" optional="false"/>
        <attribute mode="IN" name="CUSTOMER_ADDRESS_ALLOW_SOL" type="String" optional="true"/>
        <attribute mode="IN" name="CUSTOMER_HOME_COUNTRY" type="String" optional="true"/>
        <attribute mode="IN" name="CUSTOMER_HOME_AREA" type="String" optional="true"/>
        <attribute mode="IN" name="CUSTOMER_HOME_CONTACT" type="String" optional="true"/>
        <attribute mode="IN" name="CUSTOMER_HOME_EXT" type="String" optional="true"/>
        <attribute mode="IN" name="CUSTOMER_HOME_ALLOW_SOL" type="String" optional="true"/>
        <attribute mode="IN" name="CUSTOMER_WORK_COUNTRY" type="String" optional="true"/>
        <attribute mode="IN" name="CUSTOMER_WORK_AREA" type="String" optional="true"/>
        <attribute mode="IN" name="CUSTOMER_WORK_CONTACT" type="String" optional="true"/>
        <attribute mode="IN" name="CUSTOMER_WORK_EXT" type="String" optional="true"/>
        <attribute mode="IN" name="CUSTOMER_WORK_ALLOW_SOL" type="String" optional="true"/>
        <attribute mode="IN" name="CUSTOMER_FAX_COUNTRY" type="String" optional="true"/>
        <attribute mode="IN" name="CUSTOMER_FAX_AREA" type="String" optional="true"/>
        <attribute mode="IN" name="CUSTOMER_FAX_CONTACT" type="String" optional="true"/>
        <attribute mode="IN" name="CUSTOMER_FAX_ALLOW_SOL" type="String" optional="true"/>
        <attribute mode="IN" name="CUSTOMER_MOBILE_COUNTRY" type="String" optional="true"/>
        <attribute mode="IN" name="CUSTOMER_MOBILE_AREA" type="String" optional="true"/>
        <attribute mode="IN" name="CUSTOMER_MOBILE_CONTACT" type="String" optional="true"/>
        <attribute mode="IN" name="CUSTOMER_MOBILE_ALLOW_SOL" type="String" optional="true"/>
        <attribute mode="IN" name="UNUSEEMAIL" type="String" optional="true"/>
        <attribute mode="IN" name="USERNAME" type="String" optional="true"/>
        <attribute mode="IN" name="PASSWORD" type="String" optional="true"/>
        <attribute mode="IN" name="CONFIRM_PASSWORD" type="String" optional="true"/>
        <attribute mode="IN" name="PASSWORD_HINT" type="String" optional="true"/>
        <attribute mode="IN" name="PASSWORD_HINT" type="String" optional="true"/>
        <attribute name="request" mode="IN" type="javax.servlet.http.HttpServletRequest" optional="true"/>
        <attribute name="response" mode="IN" type="javax.servlet.http.HttpServletResponse" optional="true"/>

        <!-- Output Attributes -->
        <auto-attributes include="pk" mode="OUT" optional="false"/>
        <auto-attributes include="nonpk" mode="OUT" optional="true"/>
        <attribute mode="OUT" name="customerId" type="String" optional="false"/>
        <attribute mode="OUT" name="registrationStatus" type="String" optional="true"/>
    </service>

    <service name="loginCustomer" engine="java"
             location="org.apache.ofbiz.ecommerce.customer.customerEvents" invoke="loginCustomer" auth="false" action="POST" export="true">
    <description>Login  Customer to Ecommerce</description>

        <attribute mode="IN" name="USERNAME" type="String" optional="false"/>
        <attribute mode="IN" name="PASSWORD" type="String" optional="false"/>
        <attribute name="request" mode="IN" type="javax.servlet.http.HttpServletRequest" optional="true"/>
        <attribute name="response" mode="IN" type="javax.servlet.http.HttpServletResponse" optional="true"/>
        <attribute mode="OUT" name="message" type="String" optional="false"/>
        <attribute mode="OUT" name="token" type="String" optional="false"/>
    </service>

    <service name="additem" engine="java"
             location="org.apache.ofbiz.ecommerce.customer.customerEvents" invoke="addToCart" action="POST" export="true">
        <description>Login  Customer to Ecommerce</description>
        <attribute mode="IN" name="add_product_id" type="String" optional="true"/>
        <attribute mode="IN" name="clearSearch" type="String" optional="true"/>
        <attribute mode="IN" name="mainSubmitted" type="String" optional="true"/>
        <attribute mode="IN" name="quantity" type="String" optional="true"/>
        <attribute mode="IN" name="productStoreId" type="String" optional="true"/>
        <attribute mode="IN" name="userLoginId" type="String" optional="true"/>
        <attribute name="request" mode="IN" type="javax.servlet.http.HttpServletRequest" optional="true"/>
        <attribute name="response" mode="IN" type="javax.servlet.http.HttpServletResponse" optional="true"/>
        <attribute mode="OUT" name="message" type="String" optional="true"/>
    </service>
</services>